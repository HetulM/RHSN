<%# The view for the new password form which allows the user to create a new password. %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

        <h1 class="title is-3">Forgot your password?</h1>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

           <%# Label to enter your password where you would like the reset instructions to be sent to %>
          <div class="field">
            <div class="control">
            <%= f.input :email, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>
          
          <%= f.button :submit, "Send me reset password instructions", class: "post-btn" %>
          
        <% end %>
        <br />
        <%= render "devise/shared/links" %>

    </div>
    </div>
  </div>
</section>
