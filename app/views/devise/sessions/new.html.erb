<%# The view for the sign-in page which allows a user to sign-in to their account. %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

        <h1 class="title is-3 sign-in-title"><%= t ".title" %></h1>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <%# Allows the user to enter their email %>
          <div class="field">
            <div class="control">
              <%= f.input :email, label: t("email"), required: false, input_html: { class: "input" }, placeholder: t(".email_placeholder"), wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <%# Allows the user to enter their password %>
          <div class="field">
            <div class="control">
              <%= f.input :password, label: t("password"), required: false, input_html: { class: "input" }, placeholder: t(".password_placeholder"), wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <%# Allows the user to check a box if they want their details to be saved %>
          <div class="field">
            <div class="control">
              <%= f.input :remember_me, label: t("remember_me"), wrapper: false, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>

          <%# Button to log in to your account %>
          <%= f.button :submit, t("login"), class:"post-btn" %>

        <% end %>
        <br/>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
