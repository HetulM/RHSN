<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

        <h1 class="title is-3">Create An Account!</h1>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
          <%= f.error_notification %>

          <%= f.label :avatar, "avatar" do %>
            <%= f.file_field :avatar %>
            <%= f.hidden_field :avatar_cache %>
          <% end %>

          <div class="field">
            <div class="control">
              <%= f.input :name, label: t("name"), required: true, autofocus: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "Enter name here..." %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :username, label: t("username"), required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "Enter username here..." %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :email, label: t("email"), required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "Enter your email..." %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password, label: t("password"), required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation, label: t("password_confirmation"), required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.button :submit, t("confirm_sign_up"), class:"post-btn" %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</section>