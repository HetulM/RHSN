<%# The partial for the "people you may know" section. %>

<div class="flex-container">
  <div class="box-1">
    <p class="block rounded-corner-1"><%= t ".title" %></p>
    <%# Displays the users which are signed up to the website %>
    <% @users.each do |user| %>
      <% if user.id != current_user.id %>
        <div class="box-2">
          <div class="block flex">
            <div class="items">
              <div class="column-1">
                <h3 style="font-size: 20px;"><%= link_to user.name %></h3>
              </div>
            </div>
            <div class="items right">
              <div class="column-2">
                <%= string_with_link(t('.add_friend'), friendships_path(:friend_id => user), :method => :post) %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <div class="block flex last-rounded-corner">
      <%= link_to "Show All", friendships_path, class: "items bold-text" %>
    </div>
  </div>
</div>
