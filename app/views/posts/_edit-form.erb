<%# The view for the edit posts page. 
    This allows you to edit the contents of a post. %>
<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
      <%= f.input :post, label: t("update"), input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" } %>
  </div>
</div>
<%= f.button :submit, value: t("form_update"), class: "post-btn" %>
<% end %>
